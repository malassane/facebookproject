<h3>Confirmation du Post</h3>
<%= form_with(model: @picture, url: pictures_path, local: true) do |form| %>
  <%= image_tag(@picture.image.url) if @picture.image && @picture.image.url %>
  <%= form.hidden_field :image_cache %>
  <%= form.submit  "register" %>
<% end %>
<%= form_with(model: @picture, url: new_picture_path, local: true) do |form| %>
  <%= form.hidden_field :image_cache  %>
  <p>Description:<%= @picture.description %></p>
  <%= form.submit  "Return" ,name: 'back'%>
<% end %>

