<h1> DETAILS DU POST  </h1>
<p>
  <strong>Image:</strong>
  <%=image_tag @picture.image.url %>
</p>
<p>
  <strong>DESCRIPTION:</strong>
  <%= @picture.description %>
</p>

<% unless @picture.user_id == current_user.id %>
  <% if @favorite.present? %>
    <%= link_to 'Remove favorite', favorite_image_path(id: @favorite.id), method: :delete, class: 'btn btn-danger' %>
  <% else %>
    <%= link_to 'Favorite', favorite_images_path(picture_id: @picture.id), method: :post, class: 'btn btn-primary' %>
  <% end %>
<% end %>
  